{
	"compilerOptions": {
		"noImplicitAny": true,
		"target": "ES6",
		"module": "ES2015",
		"lib": ["es6", "es7", "esnext", "dom"],
		"moduleDetection": "force",
		"moduleResolution": "Node",
		"alwaysStrict": true,
		"sourceMap": true,
		"rootDir": "src",
		"baseUrl": "src/"
	},
	"include": ["src"]
}
